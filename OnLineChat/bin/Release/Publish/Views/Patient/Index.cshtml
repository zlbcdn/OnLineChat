@{
    Layout = null;
}

@model OnLineChatDomain.PatientVisitModel


<!DOCTYPE html>

<html>
<head>

    <title>问诊咨询</title>

    @*<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">*@

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link href="~/Scripts/styles/chatstyle.css" rel="stylesheet">
    <link href="~/Scripts/styles/jquery-ui.css" rel="stylesheet">
    <link href="~/Scripts/styles/font_icon/iconfont.css" rel="stylesheet">

</head>
<body>
    <div>
        <span id="consultation_btn" style="display:none">向医生咨询</span>
    </div>

    <div id="patient_dialog" title="输入就诊信息" style="display:none">
        <span id="message_code">@Model.MessageCode</span>
        <span id="message_content">@Model.MessageContent</span>
        <p>病历号<input type="text" id="patient_id_text" value=@Model.PatientID /></p>
        <p>患者姓名<input type="text" id="patient_name_text" value=@Model.PatientName /></p>
        <p>医生员工号<input type="text" id="doctor_id_text" value=@Model.DoctorID /></p>
        <p>医生姓名<input type="text" id="doctor_name_text" value=@Model.DoctorName /></p>
        <p>就诊科室<input type="text" id="doctor_dept_text" value=@Model.DeptName /></p>
    </div>

    <div class="dialogue-wrapper">
        <div class="dialogue-main">
            <div class="dialogue-header">
                <span id="connection_status"></span><i id="btn_close" class="dialogue-close">></i>
                <div class="dialogue-service-info">
                    <i class="dialogue-service-img" id="doctor_pic"></i>
                    <div class="dialogue-service-title">
                        <p class="dialogue-service-name" id="doctor_dept">XX客服</p>
                        <p class="dialogue-service-detail" id="hospital_name">XX客服支持平台</p>
                    </div>
                </div>
            </div>
            <div id="dialogue_contain" class="dialogue-contain">
                @*<p class="dialogue-service-contain"><span class="dialogue-text dialogue-service-text">您好！</span></p>
                <p class="dialogue-customer-contain"><span class="dialogue-text dialogue-customer-text">我有个问题</span></p>*@
            </div>
            <div class="dialogue-submit">
                <p id="dialogue_hint" class="dialogue-hint">
                    <span class="dialogue-hint-icon">!</span>
                    <span class="dialogue-hint-text">发送内容不能为空</span>
                </p>

                <div>
                    <textarea id="dialogue_input" class="dialogue-input-text" placeholder="请输入内容，按回车(Enter)键发送"></textarea>
                </div>

                <div class="dialogue-input-tools">
                    <label id="chat-tuxiang" title="发送图片" for="inputImage" class="btn-default-styles">
                        <input type="file" accept="image/gif,image/jpeg,image/jpg,image/png"
                               name="file" id="inputImage" class="hidden">
                        <i class="iconfont icon-tuxiang"></i>
                    </label>

                </div>
            </div>
        </div>

    </div>



    <!--添加js文件 onchange="selectImg(this)" -->
    <script src="~/Scripts/chatScript/jquery.js"></script>
    <script src="~/Scripts/chatScript/jquery-ui.js"></script>
    <script src="~/Scripts/chatScript/onlinechat.js"></script>
</body>
</html>
